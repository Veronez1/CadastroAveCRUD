@model CadastroAve.Models.Ave

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar ave</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomeComum" class="control-label"></label>
                <input asp-for="NomeComum" class="form-control" />
                <span asp-validation-for="NomeComum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeCientifico" class="control-label"></label>
                <input asp-for="NomeCientifico" class="form-control" />
                <span asp-validation-for="NomeCientifico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reino" class="control-label"></label>
                <input asp-for="Reino" class="form-control" />
                <span asp-validation-for="Reino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Filo" class="control-label"></label>
                <input asp-for="Filo" class="form-control" />
                <span asp-validation-for="Filo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Classe" class="control-label"></label>
                <input asp-for="Classe" class="form-control" />
                <span asp-validation-for="Classe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ordem" class="control-label"></label>
                <input asp-for="Ordem" class="form-control" />
                <span asp-validation-for="Ordem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Familia" class="control-label"></label>
                <input asp-for="Familia" class="form-control" />
                <span asp-validation-for="Familia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Especie" class="control-label"></label>
                <input asp-for="Especie" class="form-control" />
                <span asp-validation-for="Especie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistribuicaoGeografica" class="control-label"></label>
                <input asp-for="DistribuicaoGeografica" class="form-control" />
                <span asp-validation-for="DistribuicaoGeografica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagem" class="control-label"></label>
                <input asp-for="Imagem" class="form-control" />
            </div>
            <br />
            <div style="display:inline" class="form-group">
                <input type="submit" value="Editar" class="btn btn-success" />
            </div>
            <div style="display:inline">
                <a type="submit" class="btn btn-outline-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
