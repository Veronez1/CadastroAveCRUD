@model IEnumerable<CadastroAve.Models.Ave>

@{
    ViewData["Title"] = "Aves";
}

<h1>Aves</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Cadastrar nova Ave</a>
</p>
<table style="width: 1500px"; class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeComum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCientifico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ordem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Familia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistribuicaoGeografica)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeComum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCientifico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ordem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Familia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistribuicaoGeografica)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Apagar</a>
                </td>

        </tr>
}
    </tbody>
</table>
